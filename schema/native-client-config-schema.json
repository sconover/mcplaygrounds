{
  "$schema": "http://json-schema.org/draft-03/schema#",

  "title": "mcprog config schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hosted_app_window": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "required": true
        },
        "process_info": {
          "type": "object",
          "required": true,
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "file_name": {
                  "type": "string",
                  "minLength": 1,
                  "required": true
                },
                "arguments": {
                  "type": "string",
                  "minLength": 1,
                  "required": true
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "native_jars": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "java_executable_path": {
                  "type": "string",
                  "minLength": 1,
                  "required": true
                },
                "java_x_options": {
                  "type": "array",
                  "required": true,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "java_system_properties": {
                  "type": "array",
                  "required": true,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "java_classpath_components": {
                  "type": "array",
                  "required": true,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "java_main_class": {
                  "type": "string",
                  "minLength": 1,
                  "required": true
                },
                "java_program_arguments": {
                  "type": "array",
                  "required": true,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          ]
        },
        "variables": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "static": { "type": "object" },
            "load_selected_minecraft_profile_from_launcher_profiles_json": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "wait_for_window_title_starts_with": {
          "type": "string",
          "minLength": 1,
          "required": true
        }
      }
    },
    "browser_window": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "minLength": 1,
          "required": true
        }
      }
    }
  }
}
